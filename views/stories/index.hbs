<h1>Stories</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
{{{editIcon user ../user _id}}}
            </div>
            <div class="card-content centre-align">
                <h5>{{title}}</h5>
                <h5>{{stripTags (truncate body 150)}}</h5>
                <br/><div class="chip">
                    <img src="{{user.picture}}" alt="">
                    <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
<a href="/stories/{{user._id}}" class="btn grey">Read More...</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No stories to display</p>
    {{/each}}
</div>